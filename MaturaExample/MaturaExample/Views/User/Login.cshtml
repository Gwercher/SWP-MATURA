@model Models.User

@{
    ViewData["Title"] = "Login";
}

<form method="post" asp-controller="user" asp-action="login" onsubmit="return validateLogin()">
    <table>
        <thead>
            <tr>
                <th colspan="3">Login</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Email</td>
                <td> <input type="email" asp-for="Email" onblur="validateEmail()"> </td>
                <td> <span id="EmailErr" asp-validation-for="Email" ></span> </td>
            </tr>
            <tr>
                <td>Password</td>
                <td> <input type="password" asp-for="Password" onblur="validatePassword()"> </td>
                <td> <span id="PasswordErr" asp-validation-for="Password"></span> </td>
            </tr>
            <tr>
                <td colspan="3"> <input type="submit" value="Submit"/> </td>
            </tr>
        </tbody>
        <tfoot>

        </tfoot>
    </table>
</form>

<script src="~/js/FormValidation.js" defer></script>